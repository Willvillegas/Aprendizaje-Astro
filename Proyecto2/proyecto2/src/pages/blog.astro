---
import Layout from "@/layouts/Layout.astro";
const allPosts = await Astro.glob("@/pages/post/*.md");
import BlogPost from "@/components/BlogPost.astro";
---

<Layout>
    <div
        style="display: flex; flex-direction: column; justify-content: center; align-items: center; height: 100vh;"
    >
        <h1>blog de mi sitio</h1>
        <ul>
            <!-- <li><a href="/post/post1">Post 1</a></li>
            <li><a href="/post/post2">Post 2</a></li>
            <li><a href="/post/post3">Post 3</a></li> -->
            {
                allPosts.map((post) => (
                    <li>
                        {/* <a href={post.url}>{post.frontmatter.title}</a> */}
                        <BlogPost title={post.frontmatter.title} url={post.url} image={post.frontmatter.image.url} />
                    </li>
                ))
            }
        </ul>
    </div>
</Layout>
