---
import Base from "@/layouts/Base.astro";

const matches = import.meta.glob("@/pages/post/*.md", { eager: true });
const allPosts = Object.values(matches) as any;
const tags = [
    ...new Set(allPosts.map((post: any) => post.frontmatter.tags).flat()),
];

const page = "√çndice de etiquetas";
---

<Base pageTitle={page}>
    <div class="tag">
        {
            tags.map((tag) => (
                <p class="tag">
                    <a href={`/tag/${tag}`}>{tag}</a>
                </p>
            ))
        }
    </div>
</Base>
<style>
    a {
        color: #00539f;
        text-decoration: none;
    }

    .tags {
        display: flex;
        flex-wrap: wrap;
    }

    .tag {
        text-align: center;
        margin: 0.25em;
        border: dotted 1px #a1a1a1;
        border-radius: 0.5em;
        padding: 0.5em 1em;
        font-size: 1.15em;
        background-color: #f8fcfd;
    }
</style>
